<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/editResultado"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="-9dp"
        android:src="@drawable/calculadora"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="3dp" />

    <EditText
        android:id="@+id/editX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="82dp"
        android:ems="10"
        android:hint="Digite o valor de X"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="120dp" />

    <EditText
        android:id="@+id/editY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editX"
        android:layout_alignStart="@+id/editX"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Digite o valor de Y"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonSomar"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editY"
        android:layout_alignStart="@+id/editX"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:onClick="onClickSomar"
        android:text="Somar"
        android:textColor="#0a46a8"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editResultado"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="135dp"
        android:ems="10"
        android:hint="Resultado"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonLimpar"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_below="@+id/editY"
        android:layout_alignStart="@+id/editX"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="197dp"
        android:text="Limpar"
        android:textColor="#c63107"
        android:textSize="18sp" />

</RelativeLayout>